<% include ../partial/header.ejs %>
<div class="container">
	<div class="row">
		<h1 style="text-align:center">
		Add A New Comment To <%=camp.name %>
		</h1>
		<div style="width:30%;margin:0 auto;">
			<form action="/campground/<%=camp._id %>/comment" method="POST">
				<div class="form-group">
				<input type="text" class="form-control" name="comment[title]" placeholder="Comment Here">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-default btn-block">
						Submit
					</button>
				</div>
			</form>
			<a href="/campground">
				GO BACK
			</a>
		</divs
	</div>
</div>
