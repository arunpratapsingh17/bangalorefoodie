<% include ../partial/header.ejs %>
<div class="container">
	<div class="row">
		<h1 style="text-align:center">
		Edit <%= campground.name %>
		</h1>
		<div style="width:30%;margin:0 auto;">
			<form action="/campground/<%= campground._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input type="text" class="form-control" name="campground[name]" value="<%= campground.name %>">
				</div>
				<div class="form-group">
				<input type="text" class="form-control" name="campground[image]" value="<%= campground.image %>">
				</div>
				<div class="form-group">
				<input type="text" class="form-control" name="campground[description]" value="<%= campground.description %>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-default btn-block">
						Submit
					</button>
				</div>
			</form>
			<a href="/campground/<%=campground._id %>">
				GO BACK
			</a>
		</div>
	</div>
</div>
<% include ../partial/footer.ejs %>